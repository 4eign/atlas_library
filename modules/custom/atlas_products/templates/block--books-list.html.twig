{% import "form-macros.html.twig" as form_macros %}
<div data-ng-books-list ng-init="uuid='{{ uuid }}'">
  <div class="row">
    <form>
      {% for filter in filters %}
        {{ form_macros.setStyle(filter) }}
      {% endfor %}
      <button class="btn waves-effect waves-light right" type="submit" name="action" ng-click="bookFilter()">Buscar
        <i class="material-icons right">search</i>
      </button>
    </form>
  </div>
    <div class="row row-product">
      <div ng-repeat="book in books['{{ uuid }}']">
      <div class="col s12 m4 l3 book-card">
        <div class="card large">
          <div class="card-image">
              <img class="activator responsive-img" src="{[{ book.image.uri }]}">
              <span class="card-title">{[{ book.name }]}</span>
              <a class="btn-floating halfway-fab waves-effect waves-light red"><i class="material-icons">add</i></a>
          </div>
          <div class="card-content">
            <span class="card-title activator grey-text text-darken-4">{[{ book.author }]}<i class="material-icons right">more_vert</i></span>
            <p>{[{ book.price }]}</p>
          </div>
          <div class="card-action">
            <a href="#">This is a link</a>
          </div>
          <div class="card-reveal">
            <span class="card-title grey-text text-darken-4">{[{ book.name }]}<i class="material-icons right">close</i></span>
            <p>{[{ book.description }]}</p>
          </div>
        </div>
      </div>
    </div>
	</div>
</div>